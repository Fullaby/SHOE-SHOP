<%- include('partials/header', {title : 'Form Add New Shoe'}) %> 
    <main>
        <div class="container col-6 mt-5">
          <h1 class="text-center">Add New Shoe</h1>
          
          <% if(errors){ %>
            <div class="p-2 rounded-1" style="background-color:rgb(255, 205, 214) ;">
                <% errors.split(',').forEach(el => { %>
                    <div style="color:rgb(255, 53, 53);"> *<%= el %> </div>
                 <% })%>
            </div>
          <% } %> 

          <form action="/admin/add" method="post" enctype="multipart/form-data">
            <div class="mb-2">
              <label class="form-label">Name</label>
              <input type="text" class="form-control" id="name" name="name">
            </div>

            <div class="mb-2">
              <label class="form-label">Size</label>
              <input type="number" class="form-control" id="size" name="size">
            </div>
            
            <div class="mb-2">
                <label class="form-label">Color</label>
                <input type="text" class="form-control" id="color" name="color">
            </div>
            
            <div class="mb-2">
              <label class="form-label">Price</label>
              <input type="number" class="form-control" id="price" name="price">
            </div>

            <div class="mb-2">
              <label class="form-label">Stock</label>
              <input type="number" class="form-control" id="stock" name="stock">
            </div>

            <div class="mb-2">
              <label class="form-label">Image</label>
              <input type="file" class="form-control" id="image" name="imagePath">
            </div>
            
            <div class="mb-2">
                <label class="form-label">Category</label>
                <select class="form-select form-select-sm mb-3" name="CategoryId">
                    <option selected disabled>--Category--</option>
                    <% data.forEach(el => { %>
                        <option value=<%= el.id %> ><%= el.name %> </option>
                    <% }) %>
                  </select>
            </div>

            <button type="submit" class="btn btn-secondary">Add</button>
            <a href="/admin" type="submit" class="btn btn-danger">Cancel</a>
          </form>

        </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>