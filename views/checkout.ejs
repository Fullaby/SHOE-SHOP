<%- include('./partials/header', {title : "Checkout"}) %> 

<main>
    <div class="container col-9 mt-5">
        <h1>Checkout <%=data[0].User.username%> </h1>

        <% let count = 0 %> 
        <table class="table mt-3">
            <thead>
                <th>Name</th>
                <th>Price</th>
            </thead>
            <tbody>
                <% data.forEach(el => { %>
                    <% count += el.Product.price%>
                    <tr>
                        <td><%= el.Product.name %> </td>
                        <td><%= formatRp(el.Product.price) %> </td>
                    </tr>
                <% }) %> 
            </tbody>
        </table>

        <h3>Total Price : <span style="color:rgb(36, 36, 36) ;"><%= formatRp(count) %></span></h3>

    </div>
</main>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>