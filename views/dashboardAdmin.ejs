<%- include('partials/header', {title : 'Hallo Admin'}) %> 
    <main>
        <div class="container col-9 mt-5">
          <h1 class="text-center">Hallo Admin</h1>
          <a href="/admin/add" class="btn btn-secondary">Add New Shoes</a>
            <table class="table mt-3">
                <thead>
                  <tr>
                    <th scope="col">No</th>
                    <th scope="col">Name</th>
                    <th scope="col">Size</th>
                    <th scope="col">Color</th>
                    <th scope="col">Price</th>
                    <th scope="col">Stock</th>
                    <th scope="col">Category</th>
                    <th scope="col">Action</th>
                  </tr>
                </thead>
                <tbody>
                  <% data.forEach((el, i) => { %>
                    <tr>
                      <td><%= i + 1%></td>
                      <td><%=el.name%></td>
                      <td><%=el.size%></td>
                      <td><%=el.color%></td>
                      <td><%=convertToID(el.price)%></td>
                      <td><%=el.stock%></td>
                      <td><%=el.Category.name%></td>
                      <td>
                        <a href="/admin/<%= el.id %> /restock" class="btn btn-secondary">Restock</a>
                        <a href="/admin/<%= el.id %> /delete" class="btn btn-danger">Delete</a>
                      </td>
                    </tr>
                    <% }) %> 
                  </tbody>
                </table>
              </div>
      </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>